<div class="col-md-12 home">
  <nav class="navbar shadow navbar-expand-lg py-3 fixed-top navbar-dark">
    <div class="container">
      <a href="/" class="navbar-brand font-weight-bold">Url Kıslat</a>
      <div>
        <a href="/" class="btn btn-outline-light px-5 ml-auto">Üye Ol</a>
        <a href="/" class="btn btn-outline-light px-5 ml-auto">Giriş Yap</a>
      </div>
    </div>
  </nav>

  <div class="col-md-8 form mx-auto">
    <h1 class="text-center mb-5">URL KISALT</h1>
    <% if(typeof errors != 'undefined'){%>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <%= errors[0].msg%>
      <button
        type="button"
        class="close"
        data-dismiss="alert"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    
    <%}%> <% if(typeof current_url!= 'undefined' && typeof custom_url !=
    'undefined'){%>
    <div
      class="alert alert-success alert-dismissible fade show d-flex"
      role="alert"
    >
      Yeni URL: 
      <a class="text-dark font-weight-bolder" href="<%= current_url + custom_url %>"><%= current_url + custom_url %></a>
      <button
        type="button"
        class="close"
        data-dismiss="alert"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%}%>
    <form action="/" method="POST" class="form-check shadow p-4">
      <div class="form-group">
        <label for="Url">Kısaltmak için geçerli bir URL girin.</label>
        <input
          type="url"
          name="original_url"
          class="form-control border-bottom border-left-0 border-top-0 border-right-0 border-secondary"
          placeholder="https://******.com"
        />
      </div>

      <div class="form-group">
        <label for="shortUrl">Yeni URL girin.</label>
        <div class="form-group border-0 border-bottom d-flex">
          <input type="hidden" name="current_url" value="<%= current_url %>" />
          <p class="mt-2 pl-2"><%= current_url %></p>
          <input
            type="text"
            name="custom_url"
            class="ml-2 form-control border-bottom border-left-0 border-top-0 border-right-0 border-secondary"
            placeholder="my_portfolio"
          />
        </div>
      </div>

      <div class="form-group">
        <button
          type="submit"
          class="btn text-white font-weight-bolder btn-dark btn-block"
        >
          Kısalt!
        </button>
      </div>
    </form>
  </div>
  
</div>
